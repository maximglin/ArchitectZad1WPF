<Window x:Class="ArchitectZad1WPF.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchitectZad1WPF"
        mc:Ignorable="d"
        Title="Ввод парольной фразы" SizeToContent="WidthAndHeight">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock>Введите ключ для расшифровки:</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0">Парольная фраза:</TextBlock>
                <PasswordBox Grid.Column="1" x:Name="decPassword" MinWidth="200"></PasswordBox>
            </Grid>
            <Button Margin="0 10 0 0" Click="Button_Click">Ввод</Button>
        </StackPanel>
    </Grid>
</Window>
